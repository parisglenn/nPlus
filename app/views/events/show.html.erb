<div class="row-fluid">
  <div class="span5">

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>
<p>
  <b>Description:</b>
  <%= @event.description %>
</p>
<p>
  <b>Start time:</b>
  <%= f_time @event.starts_at %>
</p>

<p>
  <b>End time:</b>
  <%= f_time @event.ends_at %>
</p>

<p>
  <b>Location:</b>
  <%= @event.location %>
</p>

<p>
  <b>Event date:</b>
  <%= fd @event.event_date %>
</p>

<p>
  <b>Geo:</b>
  <%= @event.geo.name %>
</p>

<p>
  <b>Categories</b>
  <%tags = "" %>
  <% @event_tags.each do |et| %>
    <%tags += et.interest.name + ", " %>
  <% end %>
  <%= tags[0...-2] %>
</p>

<%= @event.rsvp_limit ? "This event is limited to #{@event.rsvp_limit} attendees" : "" %>

<p>
  <b>Attendees:</br></b>
  <% @attending_users.each do |attendee| %>
    <div class="row-fluid">
      <div class="span3">
    <%= attendee.name %>
      </div>
      <div class="span3">
    <% if @host_ids.include? attendee.id %>
      (host)
    <% elsif @host_ids.include? current_user.id %>
      <%= form_tag assign_host_path, :method => :put do %> 
        <input type="hidden" name="new_host" id="user_id_#{event.id}" value=<%=attendee.id%>>
        <input type="hidden" name="event_id" id="event_id_#{event.id}" value=<%=@event.id%>>
        <input class="rsvp-button" name="commit" type="submit" value="Make a host">
      <% end %>
    <% end %> 
  </div>
    </br>
  </div>
  <% end %>
</p>


<% if @host_ids.include? current_user.id %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>

  </div>
  <div class="span2">
    <% unless @event.hosts_include? current_user or (@event.rsvp_limit and @event.attending_users.count >= @event.rsvp_limit ) %>
      <% @actions.each do |action| %>
        <%= render partial: "events/rsvp", content_type: 'text/html', locals: { event: @event, respond_with: 'events', action: action } %>
      <% end %>
    <% end %>
  </div>
  <div class="span5" id="event-comments">
    <div class="row-fluid">
      <%= render partial: "shared/comments/comments" %>
    </div>
    <div class="row-fluid">
      <%= link_to image_tag('OutlookIcon_48x48.gif'), email_event_path(event_id: @event.id) %>
    </div>
  </div>
</div>



