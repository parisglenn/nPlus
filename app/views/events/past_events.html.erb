<h3>Events from past 60 days</h3> <%= link_to 'Create new event', new_event_path %><span class='pull-right'><%= link_to 'View upcoming events', events_path, class: 'pull-right' %></span>
</br></br>

<table>
  <tr>
    <th>Name</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Location</th>
    <th>Event date</th>
    <th>Geo</th>
    <% if current_user.admin? %>
      <th> Delete </th>
    <% end %>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td style="padding: 10px;"><%= link_to event.name, event_path(event.id) %></td>
    <td style="padding: 10px;"><%= f_time event.starts_at %></td>
    <td style="padding: 10px;"><%= f_time event.ends_at %></td>
    <td style="padding: 10px;"><%= event.location %></td>
    <td style="padding: 10px;"><%= event.event_date %></td>
    <td style="padding: 10px;"><%= event.geo.name %></td>
    <!-- <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td>-->
      <% if current_user.admin? %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
  </tr>
<% end %>
</table>

<br />