<% buttons=get_rsvp_buttons %>
<!-- replace form_for with form_tag? -->
<%= form_for(@new_rsvp) do |f| %>
  <input type="hidden" name="user_id" id="user_id_#{event.id}" value=<%=current_user.id%>>
  <input type="hidden" name="event_id" id="event_id_#{event.id}" value=<%=event.id%>>
  <input type="hidden" name="status" id="status_#{event.id}" value="<%=action%>">
  <input type="hidden" name="respond_with" id="redirect_#{event.id}" value="<%=respond_with%>">

  <input class="rsvp-button btn" name="commit" type="submit" value="<%=buttons[action]%>">
<% end %>